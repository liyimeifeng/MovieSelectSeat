<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C3E8FA"
    android:orientation="vertical" >
<LinearLayout android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent" 
    android:orientation="horizontal">
<ImageView 
    android:id="@+id/ImageView01"
    android:layout_marginTop="15dp"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content" 
    android:src="@drawable/logo"/>
<TextView
    android:text="详细信息"
    android:layout_marginLeft="40dp"
    android:textSize="25dp"
    android:layout_marginTop="60dp"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content" >
</TextView>
</LinearLayout>
<LinearLayout 
        android:orientation="horizontal"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        >
    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="订单号" 
        android:id="@+id/returndetail01"
        android:textStyle="bold">
    </TextView>
    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:text="用户" 
        android:id="@+id/returndetail02">
    </TextView>
    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:text="电影名" 
        android:id="@+id/returndetail03">
    </TextView>
    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:text="日期" 
        android:id="@+id/returndetail04"
        android:textStyle="bold">
    </TextView>
    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:text="时间" 
        android:id="@+id/returndetail05"
        android:textStyle="bold">
    </TextView>
    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:text="数量" 
        android:id="@+id/returndetail06"
        android:textStyle="bold">
     </TextView>
</LinearLayout>
<ListView 
    android:id="@+id/ListView_returndetail"       
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:choiceMode="singleChoice"	     
    android:cacheColorHint="#00000000" >
</ListView>
</LinearLayout>