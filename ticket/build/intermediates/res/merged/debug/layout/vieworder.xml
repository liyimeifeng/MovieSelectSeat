<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_gravity="center"
    android:layout_height="fill_parent"
    android:background="#C3E8FA"
    android:layout_width="fill_parent" android:orientation="vertical"
    android:padding="15dip" xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent" 
    android:orientation="horizontal">
<ImageView 
    android:id="@+id/ImageView01"
    android:layout_marginTop="15dp"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content" 
    android:src="@drawable/logo"/>
<TextView
    android:text="查看订单"
    android:layout_marginLeft="40dp"
    android:textSize="23dp"
    android:layout_marginTop="60dp"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content" >
</TextView>
</LinearLayout>
<LinearLayout 
    android:orientation="horizontal"
    android:layout_width="500dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dip"
    >
    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="订单号" 
        android:id="@+id/vieworder01"
        android:textStyle="bold">
    </TextView>  
    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="用户" 
        android:id="@+id/vieworder02">
    </TextView>
    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="电影名" 
        android:id="@+id/vieworder03">
    </TextView>
    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:text="日期" 
        android:id="@+id/vieworder04"
        android:textStyle="bold">
    </TextView>
    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:text="时间" 
        android:id="@+id/vieworder05"
        android:textStyle="bold">
    </TextView>    
    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:text="数量" 
        android:id="@+id/vieworder06"
        android:textStyle="bold">
    </TextView>
</LinearLayout>
<ListView 
	android:id="@+id/ListView_vieworder"       
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:choiceMode="singleChoice"	     
    android:cacheColorHint="#00000000" >
</ListView>
</LinearLayout>