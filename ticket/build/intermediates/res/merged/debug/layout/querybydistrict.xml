<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:layout_gravity="center"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent" android:orientation="vertical"
    android:background="#BBEEFF"
    android:gravity="center_horizontal"
    android:padding="15dip" xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent" 
    android:orientation="horizontal">
<ImageView 
    android:id="@+id/ImageView01"
    android:layout_marginTop="15dp"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content" 
    android:src="@drawable/logo"/>
<TextView
    android:text="按国家查询"
    android:layout_marginLeft="23dp"
    android:textSize="25dp"
    android:layout_marginTop="60dp"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content" >
</TextView>
</LinearLayout>
    <LinearLayout android:layout_gravity="top" 
  	android:layout_height="wrap_content"
    android:layout_width="fill_parent" 
    android:orientation="vertical">
        <TableLayout 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" 
            android:stretchColumns="3">
            <TableRow>
                <TextView android:text="国家："/>
                <EditText android:id="@+id/district_label1" android:width="150dp" android:hint="请输入国家"/>
            </TableRow>
        </TableLayout>
        <TableLayout android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingTop="20dip" android:stretchColumns="3">
            <TableRow>
                <TextView android:layout_width="wrap_content" android:text=" "/>
                <Button android:id="@+id/query2" android:layout_width="100dp" android:text="查询"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>